        /// <summary>
        /// <returns></returns>
        public IEnumerable<XM_Facility_PayEntity> GetPageList(Pagination pagination, string queryJson)
        {
            try
            {
                var strSql = new StringBuilder();
                strSql.Append("SELECT ");
                strSql.Append(fieldSql);
                strSql.Append(" FROM XM_Facility_Pay t ");
                return this.BaseRepository().FindList<XM_Facility_PayEntity>(strSql.ToString(), pagination);
