@{
    ViewBag.Title = "Wizsen_TNRD_Pact";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="lr-layout lr-layout-left-center" id="lr_layout" style="padding-left: 337px;" >
    <div class="lr-layout-left" style="width:330px">
        <div class="lr-layout-wrap">
            <div class="lr-layout-title">
                项目&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <input id="ImplementYear" type="text" class="form-control" placeholder="立项年份" style="width:160px;display:inline" readonly="readonly" />
                <a id="btn_Project_Search" class="btn btn-primary btn-sm"><i class="fa fa-search"></i>&nbsp;查询</a>
            </div>
            <div id="tree" class="lr-layout-body"></div>
        </div>
    </div>
    <div class="lr-layout lr-layout-center" id="lr_layout">
        <div class="lr-layout-center">
            <div class="lr-layout-wrap ">
                <div>
                    <div class="lr-layout-tool-left">
                        <div class="lr-layout-tool-item">
                            <span class="btn btn-sm">&nbsp;合同类型:</span>
                        </div>
                        <div class="lr-layout-tool-item">
                            <div id="contractType" class="form-control" style="width:160px"></div>
                            @*<input id="contractType" type="text" class="form-control" style="width:160px" placeholder="合同类型" />*@
                        </div>
                        <div class="lr-layout-tool-item">
                            <span class="btn btn-sm">&nbsp;合同名称:</span>
                        </div>
                        <div class="lr-layout-tool-item">
                            <input id="pactName" type="text" class="form-control" placeholder="合同名称" style="width:160px" />
                        </div>
                        <div class="lr-layout-tool-item">
                            <span class="btn btn-sm">&nbsp;乙方单位:</span>
                        </div>
                        <div class="lr-layout-tool-item">
                            <input id="supplier" type="text" class="form-control" placeholder="乙方单位" style="width:160px" />
                        </div>
                        <div class="lr-layout-tool-item">
                            <a id="btn_Search" class="btn btn-primary btn-sm"><i class="fa fa-search"></i>&nbsp;查询</a>
                        </div>
                    </div>
                </div>
                <div class="lr-layout-tool">
                    <div class="lr-layout-tool-right" style="padding-top: 18px;">
                        <div class=" btn-group btn-group-sm">
                            <a id="lr_refresh" class="btn btn-default"><i class="fa fa-refresh"></i></a>
                        </div>
                        <div class=" btn-group btn-group-sm">
                            <a id="lr_add" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;新增</a>
                            <a id="lr_edit" class="btn btn-default"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
                            <a id="lr_delete" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
                            <a id="lr_Browse" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;查看</a>
                            <a id="lr_Uploader" class="btn btn-default"><i class="fa fa-pencil-square-o"></i>&nbsp;上传附件</a>
                            <a id="lr_pay" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;付款</a>
                            <a id="lr_payDetail" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;查看付款明细</a>
                        </div>
                    </div>
                </div>
                <div class="lr-layout-body" id="gridtable" ></div>
            </div>
        </div>
    </div>

</div>
@Html.AppendJsFile("/Areas/Wizsen_TNRD_Project/Views/Wizsen_TNRD_Pact/Index.js")
