                            <td>@ViewBag.model.Rows[0]["Package"]</td>
                            <td>@ViewBag.model.Rows[0]["ProjectState"]</td>
                            <td>@ViewBag.model.Rows[0]["Principal"]</td>
                            <td>@ViewBag.model.Rows[0]["Phone"]</td>
