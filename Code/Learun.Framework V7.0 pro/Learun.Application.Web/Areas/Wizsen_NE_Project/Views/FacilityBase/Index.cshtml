@{
    ViewBag.Title = "设备管理";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="lr-layout" id="lr_layout">
    <div class="lr-layout-left">
        <div class="lr-layout-wrap">
            <div class="lr-layout-title">树形目录</div>
            <div id="tree" class="lr-layout-body"></div>
        </div>
    </div>
    <div class="lr-layout-center">
        <div class="lr-layout-wrap">
            <div>
                <div class="lr-layout-tool-left">
                    <div class="lr-layout-tool-item">
                        <span class="btn btn-sm">&nbsp;项目名称:</span>
                    </div>
                    <div class="lr-layout-tool-item">
                        <input id="ProjectName" type="text" class="form-control" placeholder="项目名称" style="width:160px" />
                    </div>
                    <div class="lr-layout-tool-item">
                        <span class="btn btn-sm">&nbsp;设备分类:</span>
                    </div>
                    <div class="lr-layout-tool-item">
                        <input id="Classify" type="text" class="form-control" placeholder="项目名称" style="width:160px" />
                    </div>
                    <div class="lr-layout-tool-item">
                        <span class="btn btn-sm">&nbsp;设备包:</span>
                    </div>
                    <div class="lr-layout-tool-item">
                        <div id="Package" class="form-control" style="width:160px"></div>
                    </div>
                    <div class="lr-layout-tool-item">
                        <span class="btn btn-sm">&nbsp;设备名称:</span>
                    </div>
                    <div class="lr-layout-tool-item">
                        <input id="Name" type="text" class="form-control" placeholder="项目名称" style="width:160px" />
                    </div>
                    <div class="lr-layout-tool-item">
                        <a id="btn_Search" class="btn btn-primary btn-sm"><i class="fa fa-search"></i>&nbsp;查询</a>
                    </div>
                </div>
            </div>
            <div class="lr-layout-tool">
                <div class="lr-layout-tool-right" style="padding-top: 18px;">
                    <div class=" btn-group btn-group-sm">
                        <a id="lr_refresh" class="btn btn-default"><i class="fa fa-refresh"></i></a>
                    </div>
                    <div class=" btn-group btn-group-sm" learun-authorize="yes">
                        @*<a id="lr_add" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;新增</a>
                    <a id="lr_edit" class="btn btn-default"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>*@
                        <a id="lr_delete" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
                        <a id="lr_detail" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;查看</a>
                        <a id="lr_rate" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;税率变更</a>
                        <a id="lr_Uploader" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;添加附件</a>
                    </div>
                </div>
            </div>
            <div class="lr-layout-body" id="gridtable"></div>
        </div>
    </div>
</div>
@Html.AppendJsFile("/Areas/Wizsen_NE_Project/Views/FacilityBase/Index.js")
