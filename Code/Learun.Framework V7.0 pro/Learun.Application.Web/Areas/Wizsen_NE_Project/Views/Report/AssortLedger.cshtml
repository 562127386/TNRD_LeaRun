            <div class="print-table">
                <table border="1">
                    <tbody>
                        <tr>
                            <td style="width: 50px;">序号</td>
                            <td style="width: 180px;">项目具体实施内容列表</td>
                            <td style="width: 60px;">所属子项目名称</td>
                            @*<td style="width: 200px;" rowspan="1" colspan="2">项目具体实施内容列表</td>*@
                            <td style="width: 60px;">所属主项目名称</td>
                            <td style="width: 60px;">合同编号</td>
                            <td style="width: 60px;">合同值（元）</td>
