                                <td style="width: 100px;">子项目序号</td>
                                <td style="width: 100px;">子项目名称</td>
                            </tr>*@
                        @{
                            for (int i = 0; i < @ViewBag.data.Rows.Count; i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@ViewBag.data.Rows[i]["ProjectName"] </td>
                                    @*<td>@ViewBag.data.Rows[i]["BaseCode"] </td>*@
                                    <td>@ViewBag.data.Rows[i]["BaseSubName"] </td>
                                    @*<td>@ViewBag.data.Rows[i]["BaseSubCode"]</td>*@
                                    <td>@ViewBag.data.Rows[i]["BaseName"] </td>
                                    <td>@ViewBag.data.Rows[i]["Code"] </td>
                                    <td>@ViewBag.data.Rows[i]["Amount"] </td>
                                    @*<td>@ViewBag.data.Rows[i]["Name"] </td>
                                        <td>@ViewBag.data.Rows[i]["ProjectNo"] </td>*@
